<h3>Sent Requests</h3>
<div class="row">
  <div class="col s12 m6 offset-m3">

    <div class="card">
      <div class="card-content center-align">
        {{#each sentRequests}}
          <div class="row">
            <div class="col m6">
              <div class="chip">
                <img
                  src="data:image/png;base64,{{toString
                    requestToOrFrom.avatar
                  }}"
                />
                <a href="">{{requestToOrFrom.username}}</a>
              </div>
            </div>
            <div class="col m6">
              <form
                action="/friends/cancel/{{requestToOrFrom._id}}"
                method="POST"
                id="accept-form"
              >
                <input type="hidden" name="_method" value="PUT" />
                <button type="submit" class="btn red">
                  CANCEL
                </button>
              </form>
            </div>
          </div>

        {{else}}
          <p>No Requests. Add!</p>
        {{/each}}
      </div>
    </div>
  </div>
</div>